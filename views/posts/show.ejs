</main>
        
        <body>
            <div class="write-new">
        
                <form action="/posts/<%=post._id%>/comment" method="post" id="commentform">
                    <div id="comment-name" >
                        <input type = "text" placeholder = "Name (required)" name="name"  id="name" >
                    </div>
                            <textarea placeholder="Write your comment here" name="description" ></textarea>
                            <br>
                            <div class="g-recaptcha" data-sitekey="6LdYgEUdAAAAAG9b9WcyjDrokGw1HfzbCKlJ2FgI"></div>
                            
                            <br/>
                      

                    <div class="text-center">       
                        <button type="submit">Submit</button>
                    </div>
                </form>
            </div>


            <section class="comment-section">
                <% const counter = post.comments.length >= 2 ? "Comments" : "Comment"; %>
                    <div class="show-comments">  
                        <button class="show-comments" ><%= post.comments.length + " " + counter + "" %></button>
                    </div> 
                <% %>
                <div class="pments" ><% post.comments.forEach(item => { %>
                    <div class="comment user-comment">
                        <div class="info">
                            <a href="#"><%= item.name %></a>
                        </div>
                        <a class="avatar" href="#">
                            <span><%= moment(item.createdAt).fromNow(); %></span>

                            <!-- <img src="http://i63.tinypic.com/2r3ec1t.png" width="35" alt="Profile Avatar" title="Amanda Quick" /> -->
                        </a>
                        <p><%= item.description %></p>
                    </div>
                    <hr>
                <% });%> 
            </section>      
        </body>